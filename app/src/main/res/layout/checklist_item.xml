<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor">

    <ImageView
        android:id="@+id/icon_drag_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_drag_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#009688" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox_check_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#009688"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_drag_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox_check_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="First Item"
        android:background="@android:color/transparent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>